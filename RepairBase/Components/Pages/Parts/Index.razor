@page "/parts"
@inject IPartsService PartsService
@inject IJSRuntime js
@inject NavigationManager navManager
@rendermode InteractiveServer
<PageTitle>Parts</PageTitle>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Parts</h2>
        </div>
        <div class="col-6 text-end">
            <a href="/Parts/create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Parts
            </a>
        </div>
    </div>
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%; font-size: smaller">
            <thead>
                <tr>
                    <th>P/N</th>
                    <th>Compatible P/N</th>
                    <th>Additional P/N Comments</th>
                    <th>Parts Type</th>                    
                    <th>Laptop Model</th>                    
                    <th>Image</th>                    
                    <th>Location</th>                    
                    <th>Comments</th>                    
                    <th>Actions</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.PN<span style="font-size:xx-small">(@obj.Id)</span></td>
                        <td>@obj.CompatiblePN</td>
                        <td>@obj.AddPNComments</td>
                        <td>@obj.Type</td>
                        <td>@obj.LaptopModel</td>
                        <td>@if(obj.Image!=null) 
                        {
                            <img src="@obj.Image" width="100" height="100" class="img-thumbnail"/>
                        }                        
                        </td>
                        <td>@obj.Location</td>
                        <td>@obj.Comments</td>
                        <td>
                            <div class="w075 btn-group" role="group">
                                <a href="/Parts/detail/@obj.Id" class="btn btn-warning mx-2">
                                    <i class="fas fa-database"></i>
                                </a>
                                <a href="/Parts/update/@obj.Id" class="btn btn-warning mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button @onclick=@(() =>
                        Delete(obj.Id)) class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
@code {
    private List<Parts> Model;
    protected override async Task OnInitializedAsync()
    {
        Model = await PartsService.Get();
    }
    private async Task Delete(int deviceId)
    {
        var Parts = Model.First(q => q.Id == deviceId);
        var conform = await js.InvokeAsync<bool>("confirm", $"Are You Sure Want to Delete {Parts.Id}?");
        if (conform)
        {
            var responses = await PartsService.Delete(deviceId);
            if (responses.Success)
            {
                await OnInitializedAsync();
            }
        }
    }

}
